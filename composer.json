{
    "name": "grixu/api-client",
    "description": "Simple API Client with OAuth2 Auth handler",
    "keywords": [
        "grixu",
        "api-client"
    ],
    "homepage": "https://github.com/grixu/api-client",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mateusz Gosta≈Ñski",
            "email": "mg@grixu.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2",
        "illuminate/http": "^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.4"
    },
    "autoload": {
        "psr-4": {
            "Grixu\\ApiClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Grixu\\ApiClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Grixu\\ApiClient\\ApiClientServiceProvider"
            ],
            "aliases": {
                "ApiClient": "Grixu\\ApiClient\\ApiClientFacade"
            }
        }
    }
}
