{
    "name": "grixu/api-client",
    "description": "Simple API Client with OAuth2 Auth handler",
    "keywords": [
        "grixu",
        "api-client"
    ],
    "homepage": "https://github.com/grixu/api-client",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mateusz Gosta≈Ñski",
            "email": "mg@grixu.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2",
        "guzzlehttp/psr7": "^1.7",
        "illuminate/http": "^8.0",
        "illuminate/support": "^8.0",
        "spatie/laravel-enum": "^2.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "nunomaduro/larastan": "^0.7.12",
        "nunomaduro/phpinsights": "^2.0",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.4",
        "spatie/data-transfer-object": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Grixu\\ApiClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Grixu\\ApiClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit && vendor/bin/phpstan analyse && php artisan insights",
        "test:unit": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "lint": "vendor/bin/php-cs-fixer fix",
        "insights": "vendor/bin/phpinsights",
        "phpstan": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Grixu\\ApiClient\\ApiClientServiceProvider"
            ],
            "aliases": {
                "ApiClient": "Grixu\\ApiClient\\ApiClientFacade"
            }
        }
    }
}
